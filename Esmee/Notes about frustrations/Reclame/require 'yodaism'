require 'yodaism'

class YodaQuote
    include Yodaism

    attr_accessor :yoda_quote

    def initialize
      @yoda_quote = Yodaism.quote
    end

    def random
      @yoda_quote.random
    end

    def ascii 
      @yoda_quote.ascii
    end
end

example = YodaQuote.new
puts example.ascii
puts example.randomgem install ruby